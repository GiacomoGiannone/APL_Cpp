<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dashboard.MainPage">

    <Grid RowDefinitions="Auto, *" Padding="20">
        
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="APL Game Dashboard" FontSize="32" HorizontalOptions="Center" />
            <Label Text="Stato: Disconnesso" x:Name="StatusLabel" HorizontalOptions="Center" TextColor="Gray"/>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="Connetti" Clicked="OnConnect" BackgroundColor="Gray"/>
                <Button Text="Invia Move (Test)" Clicked="OnSendMove" BackgroundColor="Gray"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <ScrollView Grid.Row="1" Margin="0,20,0,0" BackgroundColor="#1e1e1e">
            <Label x:Name="LogLabel" 
                   Text="In attesa di dati..." 
                   TextColor="#00FF00" 
                   FontFamily="Courier New"
                   Padding="10"/>
        </ScrollView>
        
    </Grid>

</ContentPage>